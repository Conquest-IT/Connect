generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id String @id @default(uuid())
  name String
  age Int?
  sex String?
  email String? @unique
  password String? 
  about String?
  profile_image_source String?
  images Image[]
  posts Post[]
}


model Image {
  image_id String @id @default(uuid())
  source String 

  user_id String?
  user User? @relation(fields: [user_id], references: [user_id])

  post_id String?
  post Post? @relation(fields: [post_id], references: [post_id])
}

model Post {
  post_id String @id
  post_content String

  user_id String
  user User @relation(fields: [user_id], references: [user_id])

  images Image[]
}